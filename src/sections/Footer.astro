---
import GhIcon from "../icons/gh.astro";
import InIcon from "../icons/linkedin.astro";
import XIcon from "../icons/twitter.astro";
---

<section
  class="flex w-full flex-col items-center justify-center gap-y-5 border-t-1 border-tertiary border-opacity-35 py-10 md:flex-row md:justify-between"
>
  <span
    class="text-xs font-normal tracking-text text-secondary md:text-sm"
    aria-hidden="true">© 2024 Juan Burgueño. All Rights Reserved.</span
  >
  <nav>
    <ul class="flex flex-row items-center gap-x-5">
      <li>
        <a
          class="inline-block transition hover:scale-125 hover:opacity-70"
          href="https://github.com/juanburg98"
          target="_blank"
          rel="noopener"
          aria-label="View Github Profile"
        >
          <GhIcon class="text-secondary" />
        </a>
      </li>
      <li>
        <a
          class="inline-block transition hover:scale-125 hover:opacity-70"
          href="https://twitter.com/juanburg98"
          target="_blank"
          rel="noopener"
          aria-label="View Twitter Profile"
        >
          <XIcon class="text-secondary" />
        </a>
      </li>
      <li>
        <a
          class="inline-block transition hover:scale-125 hover:opacity-70"
          href="https://www.linkedin.com/in/juanburg/"
          target="_blank"
          rel="noopener"
          aria-label="View LinkedIn Profile"
        >
          <InIcon class="text-secondary" />
        </a>
      </li>
    </ul>
  </nav>
</section>
